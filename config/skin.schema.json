{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Skin schema",
  "type": "object",
  "properties": {
    "defaultSkin": {
      "type": "string"
    },
    "skins": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9]+$": {
          "type": "object",
          "properties": {
            "darkIcons": {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 2,
                "maxItems": 5
              }
            },
            "lightIcons": {
              "type": "array",
              "items": {
                "type": "string",
                "minItems": 2,
                "maxItems": 5
              }
            }
          },
          "required": ["darkIcons", "lightIcons"],
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "required": ["defaultSkin", "skins"]
}